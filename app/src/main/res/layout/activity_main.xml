<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_main"
        android:layout_alignParentTop="true" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/rg_main"
        android:layout_gravity="bottom"
        android:background="#BBBBBB" />

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F7F7F7"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:layout_marginBottom="2dp">

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/rb_news"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/main_tab_text_selector"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/rb_work"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/rb_work"
            android:gravity="center"
            android:text="工作"
            android:textColor="@color/main_tab_text_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_address_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/rb_address_list"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="@color/main_tab_text_selector"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/rb_my"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/main_tab_text_selector"
            android:textSize="10sp" />
    </RadioGroup>

</RelativeLayout>
